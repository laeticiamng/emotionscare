{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "./src/features/nyvee/**/*.ts",
    "./src/features/nyvee/**/*.tsx",
    "./src/pages/B2CNyveeCoconPage.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/*",
    "services/**/*",
    "src/components/**/*",
    "src/hooks/**/*",
    "src/lib/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
