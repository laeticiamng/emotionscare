# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-anon-key-here

# =============================================================================
# SENTRY MONITORING (Optional - Production)
# =============================================================================
# Get your DSN from https://sentry.io
VITE_SENTRY_DSN=https://your-key@o123456.ingest.sentry.io/7890123
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# =============================================================================
# API CONFIGURATION (Optional)
# =============================================================================
VITE_API_URL=https://api.example.com
VITE_WEB_URL=https://app.example.com

# =============================================================================
# SECURITY CONFIGURATION (Required for Backend API)
# =============================================================================
# JWT Secrets - Comma-separated list for secret rotation
# First secret is the current one, others are for backward compatibility
# Generate with: openssl rand -base64 64
JWT_SECRETS=your-secret-key-here,your-old-secret-key-here

# CORS Allowed Origins - Comma-separated list of allowed origins
# Example: https://app.emotionscare.com,https://staging.emotionscare.com
ALLOWED_ORIGINS=https://app.emotionscare.com

# Rate Limiting (Optional - defaults: 100 requests per 15 minutes)
# Maximum number of requests per time window
RATE_LIMIT_MAX=100
# Time window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW=900000
# Comma-separated list of IP addresses to bypass rate limiting
RATE_LIMIT_ALLOWLIST=127.0.0.1,::1

# =============================================================================
# AI SERVICES (Optional)
# =============================================================================
# OpenAI API Key - For GPT-4, Whisper, and Vision APIs
VITE_OPENAI_API_KEY=sk-...
OPENAI_API_KEY=sk-...  # Server-side key for edge functions

# Hume AI API Key - For emotion analysis
VITE_HUME_API_KEY=...
HUME_API_KEY=...  # Server-side key for edge functions

# =============================================================================
# MUSIC GENERATION APIs (Required for Music Therapy)
# =============================================================================
# TopMedia AI - For music generation
VITE_TOPMEDIA_API_KEY=your_topmedia_api_key_here

# Suno AI - Alternative music generation service
VITE_SUNO_API_KEY=your_suno_api_key_here
SUNO_API_KEY=your_suno_api_key_here  # Server-side key for edge functions

# =============================================================================
# MUSIC STREAMING INTEGRATIONS (Optional - for playlist export)
# =============================================================================
# Spotify OAuth - Get from https://developer.spotify.com
VITE_SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=https://app.emotionscare.com/auth/spotify/callback

# Apple Music - Get from https://developer.apple.com/apple-music
APPLE_MUSIC_TEAM_ID=your_apple_team_id
APPLE_MUSIC_KEY_ID=your_apple_key_id
APPLE_MUSIC_PRIVATE_KEY=your_apple_private_key

# =============================================================================
# FIREBASE CONFIGURATION (Optional - for push notifications)
# =============================================================================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef
# For FCM (Firebase Cloud Messaging) - get from Firebase Console
FIREBASE_FCM_API_KEY=your_fcm_server_api_key

# =============================================================================
# ZOOM INTEGRATION (Optional - for virtual events)
# =============================================================================
VITE_ZOOM_API_KEY=your_zoom_api_key
VITE_ZOOM_API_SECRET=your_zoom_api_secret
# For Server-to-Server OAuth (edge functions)
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret

# =============================================================================
# GOOGLE INTEGRATION (Optional - Google Calendar and Meet)
# =============================================================================
VITE_GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token

# =============================================================================
# GOOGLE ANALYTICS (Optional - for user tracking)
# =============================================================================
# Get your Measurement ID from Google Analytics 4
# Format: G-XXXXXXXXXX for GA4 or UA-XXXXXXX-X for Universal Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# EMAIL SERVICES (Required for invitations, notifications, GDPR exports)
# =============================================================================
# Email Provider: Choose one (resend, sendgrid, ses)
EMAIL_PROVIDER=resend

# Email From Address
EMAIL_FROM=noreply@emotionscare.com

# Resend (Recommended) - Get from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SendGrid - Get from https://sendgrid.com
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# AWS SES (Alternative) - Requires AWS credentials
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# WEB PUSH NOTIFICATIONS (Required for push notifications)
# =============================================================================
# Generate VAPID keys using: npx web-push generate-vapid-keys
# Public key (used in frontend)
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# Private key (used in backend edge functions - keep secret!)
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Subject for VAPID (typically your website URL or mailto:)
VAPID_SUBJECT=mailto:support@emotionscare.com

# =============================================================================
# PDF GENERATION (Optional - for report generation)
# =============================================================================
# PDFShift API - For HTML to PDF conversion
# Get from https://pdfshift.io
PDFSHIFT_API_KEY=your_pdfshift_api_key_here

# =============================================================================
# EDGE FUNCTIONS CONFIGURATION
# =============================================================================
# Frontend URL for generating links in emails and edge functions
FRONTEND_URL=https://app.emotionscare.com

# Supabase Service Role Key (for edge functions - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
