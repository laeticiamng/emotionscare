# Assets avec cache long terme
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images avec cache moyen terme
/images/*
  Cache-Control: public, max-age=86400

# Audio avec cache moyen terme
/audio/*
  Cache-Control: public, max-age=86400

/sounds/*
  Cache-Control: public, max-age=86400
