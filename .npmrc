
# Configuration pour résoudre les problèmes d'intégrité
cypress_install_binary=0
cypress_skip_binary_install=1
husky_skip_install=1
puppeteer_skip_download=1

# Désactiver le cache pour forcer un téléchargement propre
prefer-offline=false
cache=false
fund=false
audit=false
loglevel=error
progress=false

# Timeouts réduits pour fail-fast
network-timeout=60000
fetch-retry-mintimeout=5000
fetch-retry-maxtimeout=15000
fetch-retries=2

# Dépendances
legacy-peer-deps=true
auto-install-peers=true
strict-peer-dependencies=false

# Forcer une nouvelle résolution
package-lock=false
