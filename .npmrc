
# Éviter les binaires lourds pour prévenir les timeouts
cypress_skip_binary_install=1
husky_skip_install=1
puppeteer_skip_download=1

# Optimisations d'installation
prefer-offline=true
fund=false
audit=false
loglevel=error
progress=false

# Timeouts significativement augmentés pour éviter ProcessIOError
network-timeout=900000
fetch-retry-mintimeout=60000
fetch-retry-maxtimeout=300000
fetch-retries=10

# Gestion des dépendances pair
legacy-peer-deps=true
auto-install-peers=true
strict-peer-dependencies=false

# Paramètres de cache
cache-min=86400
