{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "nodeModulesDir": "auto",
  "lint": {
    "files": {
      "exclude": ["functions/**/*.test.ts"]
    }
  },
  "fmt": {
    "files": {
      "exclude": ["functions/**/*.test.ts"]
    }
  }
}
