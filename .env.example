# === SUPABASE CONFIGURATION ===
# URL de votre projet Supabase
VITE_SUPABASE_URL=https://votre-projet.supabase.co
VITE_SUPABASE_ANON_KEY=votre_cle_publique_supabase
VITE_SUPABASE_PROJECT_ID=votre_project_id

# === API KEYS (Gérées via Supabase Edge Functions) ===
# Ces clés sont automatiquement injectées côté serveur
OPENAI_API_KEY=sk-votre_cle_openai
HUME_API_KEY=votre_cle_hume_ai
SUNO_API_KEY=votre_cle_suno_ai

# === CONFIGURATION OPTIONNELLE ===
# Monitoring et analytics (optionnel)
VITE_SENTRY_DSN=https://votre-sentry-dsn@sentry.io/projet-id

# Configuration Firebase (optionnel, pour extensions futures)
VITE_FIREBASE_API_KEY=votre_cle_firebase
VITE_FIREBASE_AUTH_DOMAIN=votre-projet.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=votre-projet-firebase
VITE_FIREBASE_STORAGE_BUCKET=votre-projet.appspot.com

# === LIMITES ET PARAMÈTRES ===
# Taille maximum des uploads (en bytes)
VITE_UPLOAD_MAX_SIZE=10485760
# Types de fichiers autorisés
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/avif
VITE_ALLOWED_AUDIO_TYPES=audio/mpeg,audio/wav,audio/ogg,audio/webm

# === DÉVELOPPEMENT LOCAL ===
# URLs pour développement local
VITE_API_URL=http://localhost:3001
VITE_WEB_URL=http://localhost:3000
NODE_ENV=development