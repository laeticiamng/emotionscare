{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SunoRequest",
  "type": "object",
  "properties": {
    "customMode": { "type": "boolean", "default": true },
    "instrumental": { "type": "boolean", "default": true },
    "title": { "type": "string", "maxLength": 80 },
    "style": { "type": "string", "minLength": 3, "maxLength": 1000 },
    "prompt": { "type": "string", "maxLength": 5000 },
    "model": {
      "type": "string",
      "enum": ["V3_5","V4","V4_5","V4_5PLUS","V5"],
      "default": "V4_5"
    },
    "negativeTags": { "type": "string", "default": "" },
    "vocalGender": { "type": ["string","null"], "enum": ["m","f",null] },
    "styleWeight": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.7 },
    "weirdnessConstraint": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.3 },
    "audioWeight": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.5 },
    "durationSeconds": { "type": "integer", "minimum": 30, "maximum": 180, "default": 120 },
    "callBackUrl": { "type": "string", "format": "uri" }
  },
  "required": ["customMode","instrumental","style","model","title","callBackUrl"],
  "allOf": [
    { "if": { "properties": { "instrumental": { "const": false } } },
      "then": { "required": ["prompt"] } }
  ],
  "additionalProperties": false
}
