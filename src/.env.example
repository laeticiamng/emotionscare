# DSN Sentry (facultatif)
NEXT_PUBLIC_SENTRY_DSN=

# Clés API (remplacer avec vos propres clés)
NEXT_PUBLIC_OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_HUME_API_KEY=hume_xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_SENTRY_DSN=

# Clé API OpenAI côté backend
VITE_OPENAI_API_KEY=

# Configuration Supabase (si applicable)
