{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // ===== TYPESCRIPT STRICT MODE =====
    // Configuration stricte pour les NOUVEAUX fichiers uniquement

    // Strict checks (déjà activé dans base, mais on renforce)
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    // Additional checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,

    // Exactitude des types
    "exactOptionalPropertyTypes": false, // Trop strict pour migration

    // Interdire any implicite
    "noImplicitAny": true,

    // Forcer l'utilisation d'annotations de type
    "declaration": false,

    // Performance
    "skipLibCheck": true,
    "incremental": true
  },
  "include": [
    // Les nouveaux fichiers devront explicitement pointer vers ce tsconfig
    // Exemple: // @ts-config: tsconfig.strict.json
    "./src/NEW_FILES_ONLY/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
