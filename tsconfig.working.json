{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@types/*": [
        "./types/*"
      ],
      "cross-fetch": [
        "./tests/polyfills/cross-fetch.ts"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "ES2020",
    "types": [
      "vite/client",
      "node"
    ],
    "useDefineForClassFields": true,
    "noEmit": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "services",
    "src/__tests__"
  ],
  "include": [
    "./src/**/*",
    "./types"
  ]
}