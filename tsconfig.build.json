{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "./src/features/**/*.ts",
    "./src/features/**/*.tsx",
    "./src/pages/B2CNyveeCoconPage.tsx",
    "./src/lib/**/*.ts",
    "./src/lib/**/*.tsx",
    "./src/hooks/useSupabase.ts",
    "./src/integrations/**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
